  <script is:inline src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script is:inline>
    (() => {
      const root = document.getElementById('agi-monitor');
      if (!root) return;

      const views = {
        novice: document.getElementById('view-novice'),
        pro: document.getElementById('view-pro'),
        expert: document.getElementById('view-expert')
      };

      const buttons = {
        novice: document.getElementById('btn-novice'),
        pro: document.getElementById('btn-pro'),
        expert: document.getElementById('btn-expert')
      };

      window.switchLevel = (level) => {
        if (!views[level]) return;

        root.classList.remove('theme-novice', 'theme-pro', 'theme-expert');
        root.classList.add(`theme-${level}`);

        Object.values(views).forEach((el) => {
          if (!el) return;
          el.classList.add('is-hidden');
        });

        const activeView = views[level];
        activeView.classList.remove('is-hidden');
        activeView.classList.remove('fade-in');
        void activeView.offsetWidth;
        activeView.classList.add('fade-in');

        Object.values(buttons).forEach((btn) => btn?.classList.remove('active'));
        buttons[level]?.classList.add('active');

        window.dispatchEvent(new Event('resize'));
      };

      const initCharts = () => {
        if (!window.Chart) return;

        const Chart = window.Chart;
        Chart.defaults.font.family = 'inherit';
        Chart.defaults.responsive = true;
        Chart.defaults.maintainAspectRatio = false;

        const createChart = (id, config) => {
          const el = document.getElementById(id);
          if (!el) return null;
          return new Chart(el, config);
        };

        const colors = {
          novice: '#0284c7',
          pro: '#38bdf8',
          expert: '#00f0ff',
          textPro: '#94a3b8',
          textExp: '#005f66',
          bgPro: '#334155',
          bgExp: '#111'
        };

        createChart('chartNovice', {
          type: 'bar',
          data: {
            labels: ['Reading', 'Math', 'Coding', 'Research'],
            datasets: [
              { label: 'Avg Human', data: [70, 60, 20, 50], backgroundColor: '#cbd5e1', borderRadius: 10 },
              { label: 'AI (Feb 2026)', data: [98, 99, 95, 45], backgroundColor: colors.novice, borderRadius: 10 }
            ]
          },
          options: {
            plugins: { legend: { position: 'bottom' } },
            scales: { y: { beginAtZero: true, max: 100, grid: { display: false } }, x: { grid: { display: false } } }
          }
        });

        createChart('chartPro1', {
          type: 'bar',
          data: {
            labels: ['Closed Science (GPQA)', 'Software Eng (SWE)', 'Open Research (HLE)'],
            datasets: [
              {
                label: 'Top Model Score (Feb 2026)',
                data: [92.4, 82.0, 53.1],
                backgroundColor: [colors.pro, colors.pro, '#f43f5e'],
                borderRadius: 4
              }
            ]
          },
          options: {
            indexAxis: 'y',
            plugins: { legend: { display: false } },
            scales: {
              x: { max: 100, grid: { color: colors.bgPro }, ticks: { color: colors.textPro } },
              y: { grid: { display: false }, ticks: { color: colors.textPro } }
            }
          }
        });

        createChart('chartExpert1', {
          type: 'bubble',
          data: {
            datasets: [
              { label: 'Transformer (Legacy)', data: [{ x: 100, y: 80, r: 20 }], backgroundColor: '#333' },
              { label: 'LiQSS (New)', data: [{ x: 10, y: 85, r: 5 }], backgroundColor: colors.expert },
              { label: 'Mamba/SSM', data: [{ x: 40, y: 75, r: 10 }], backgroundColor: '#005f66' }
            ]
          },
          options: {
            plugins: {
              legend: { display: true, labels: { color: colors.textExp } },
              tooltip: { callbacks: { label: (c) => c.dataset.label } }
            },
            scales: {
              x: {
                type: 'logarithmic',
                title: { display: true, text: 'Parameter Count (Relative)', color: colors.textExp },
                grid: { color: colors.bgExp },
                ticks: { color: colors.textExp }
              },
              y: {
                title: { display: true, text: 'Performance Metric', color: colors.textExp },
                grid: { color: colors.bgExp },
                ticks: { color: colors.textExp }
              }
            }
          }
        });
      };

      let attempts = 0;
      const tryInitCharts = () => {
        attempts += 1;
        if (window.Chart) {
          initCharts();
          return;
        }
        if (attempts < 20) window.setTimeout(tryInitCharts, 120);
      };

      tryInitCharts();
    })();
  </script>
</BaseLayout>

