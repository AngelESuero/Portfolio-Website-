---
import BaseLayout from '../layouts/BaseLayout.astro';
import profile from '../data/profile';
import featuredThreads from '../data/featured_threads.json';
import { getCollection } from 'astro:content';
import HomeTabReflections from '../components/HomeTabReflections.astro';
import rooms from '../data/rooms';
import agiTimelineData from '../data/agi-timeline.json';
import { SOCIAL_URLS } from '../data/site-refs';

const allProjects = await getCollection('projects');
const allPosts = (await getCollection('posts')).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const recentPosts = allPosts.slice(0, 3);
const featuredThreadSnapshot = Array.isArray(featuredThreads.featured_threads) ? featuredThreads.featured_threads.slice(0, 3) : [];

const shortDateFormatter = new Intl.DateTimeFormat('en-US', {
  month: 'short',
  day: 'numeric',
  year: 'numeric'
});

const pluralize = (count: number, singular: string, plural = `${singular}s`) => `${count} ${count === 1 ? singular : plural}`;
const formatDateLabel = (value: unknown, fallback: string): string => {
  let parsed: Date | null = null;

  if (value instanceof Date) {
    parsed = Number.isNaN(value.valueOf()) ? null : value;
  } else if (typeof value === 'string' || typeof value === 'number') {
    const candidate = new Date(value);
    parsed = Number.isNaN(candidate.valueOf()) ? null : candidate;
  }

  return parsed ? shortDateFormatter.format(parsed) : fallback;
};

const projectCount = allProjects.length;
const projectTypeCount = new Set(allProjects.map((project) => project.data.type)).size;
const postCount = allPosts.length;
const latestPostDateLabel = formatDateLabel(allPosts[0]?.data?.date, 'recently');

const roomList = Array.isArray(rooms) ? rooms : [];
const roomCount = roomList.length;
const machineCount = roomList.reduce((count, room) => count + (Array.isArray(room.machines) ? room.machines.length : 0), 0);

const agiSignalCount = Array.isArray(agiTimelineData?.items) ? agiTimelineData.items.length : 0;
const agiUpdatedAtLabel = formatDateLabel(agiTimelineData?.meta?.generatedAt, 'Updated recently');

const quickDestinations = [
  {
    id: 'work',
    title: 'Work',
    href: '/work',
    summary:
      projectCount > 0
        ? `${pluralize(projectCount, 'project')} across ${pluralize(projectTypeCount, 'type')}.`
        : 'No projects indexed yet.',
    meta: projectCount > 0 ? `Coverage: ${pluralize(projectTypeCount, 'type')}` : 'Coverage pending',
    cta: 'Open Work',
    color: 'orange',
    tone: 'seva'
  },
  {
    id: 'writing',
    title: 'Writing',
    href: '/writing',
    summary:
      postCount > 0 ? `${pluralize(postCount, 'entry', 'entries')} published. Latest ${latestPostDateLabel}.` : 'No entries yet.',
    meta: postCount > 0 ? `Latest update ${latestPostDateLabel}` : 'Latest update pending',
    cta: 'Open Writing',
    color: 'red',
    tone: 'contemplation'
  },
  {
    id: 'social',
    title: 'Social',
    href: '/social',
    summary: `${pluralize(roomCount, 'room')} and ${pluralize(machineCount, 'machine')} mapped in the arcade.`,
    meta: `Index: ${pluralize(roomCount, 'room')}`,
    cta: 'Open Social',
    color: 'violet',
    tone: 'compassion'
  },
  {
    id: 'agi',
    title: 'AGI Timeline',
    href: '/agi',
    summary: agiSignalCount > 0 ? `${pluralize(agiSignalCount, 'signal')} tracked in the monitor.` : 'No AGI signals indexed yet.',
    meta: `Last sync ${agiUpdatedAtLabel}`,
    cta: 'Open AGI Timeline',
    color: 'indigo',
    tone: 'discernment'
  },
  {
    id: 'contact',
    title: 'Contact',
    href: '/contact',
    summary: 'Inquiry form plus direct outreach channels.',
    meta: 'Channels: form + socials',
    cta: 'Open Contact',
    color: 'yellow',
    tone: 'harmony'
  }
] as const;

const reflectionItems = quickDestinations.map((item) => ({
  id: item.id,
  title: item.title,
  href: item.href,
  summary: item.summary,
  meta: item.meta,
  cta: item.cta
}));

const sectionHighlights = [
  {
    id: 'music',
    title: 'Music',
    href: '/threads/music-production-sessions',
    summary: 'Session logs and production notes from active tape work.',
    meta: 'Thread · production',
    cta: 'Open Music',
    color: 'yellow',
    tone: 'vitality'
  },
  {
    id: 'visual',
    title: 'Visual',
    href: '/social/instagram',
    summary: 'Local-first visual archive previews and highlights.',
    meta: 'Social feed · instagram',
    cta: 'Open Visual',
    color: 'violet',
    tone: 'compassion'
  },
  {
    id: 'video',
    title: 'Video',
    href: '/social/youtube',
    summary: 'Uploads, playlists, and long-form video experiments.',
    meta: 'Social feed · youtube',
    cta: 'Open Video',
    color: 'red',
    tone: 'intensity'
  }
] as const;

const socialSnapshot = [
  {
    id: 'x',
    title: 'X',
    summary: 'Latest short-form notes and commentary from @a_e_s_4.',
    href: '/social/x',
    profileUrl: SOCIAL_URLS.x,
    color: 'indigo',
    tone: 'discernment'
  },
  {
    id: 'youtube',
    title: 'YouTube',
    summary: 'Newest uploads, playlists, and featured long-form posts.',
    href: '/social/youtube',
    profileUrl: profile.social_links.youtube,
    color: 'red',
    tone: 'vitality'
  },
  {
    id: 'instagram',
    title: 'Instagram',
    summary: 'Local-first archive previews and visual highlights.',
    href: '/social/instagram',
    profileUrl: profile.social_links.instagram,
    color: 'violet',
    tone: 'compassion'
  }
] as const;
---

<BaseLayout title="A Path Toward Life — Archive" description={profile.short_bio} theme="archive">
  <article class="home-simplified" aria-label="Homepage">
    <header class="home-hero" id="home">
      <p class="home-kicker">Timeline / Archive</p>
      <h1 class="home-title">A Path Toward Life</h1>
      <p class="home-dek">{profile.long_bio}</p>
      <div class="home-role-row" aria-label="Identity chips">
        {profile.roles.map((role) => <span class="home-role-chip">{role}</span>)}
      </div>
    </header>

    <section class="home-section" aria-labelledby="home-destinations-heading">
      <div class="home-section-head">
        <p class="home-section-kicker">Start here</p>
        <h2 id="home-destinations-heading" class="home-section-title">Quick Destinations</h2>
        <p class="home-section-description">Five direct paths through the archive.</p>
      </div>
      <ul class="home-grid" aria-label="Quick destination cards">
        {quickDestinations.map((item) => (
          <li>
            <a href={item.href} class="home-card" data-color={item.color} data-tone={item.tone}>
              <span class="home-card-title">{item.title}</span>
              <span class="home-card-summary">{item.summary}</span>
              <span class="home-card-meta">{item.meta}</span>
              <span class="home-card-cta">{item.cta}</span>
            </a>
          </li>
        ))}
      </ul>
    </section>

    <HomeTabReflections items={reflectionItems} sectionTitle="Tab Reflections" />

    <section class="home-section" aria-labelledby="home-sections-heading">
      <div class="home-section-head">
        <p class="home-section-kicker">Curated</p>
        <h2 id="home-sections-heading" class="home-section-title">Sections</h2>
        <p class="home-section-description">Three focused lanes to continue exploring.</p>
      </div>
      <ul class="home-grid" aria-label="Section highlights">
        {sectionHighlights.map((item) => (
          <li>
            <a href={item.href} class="home-card home-highlight-card" data-color={item.color} data-tone={item.tone}>
              <span class="home-card-title">{item.title}</span>
              <span class="home-card-summary">{item.summary}</span>
              <span class="home-card-meta">{item.meta}</span>
              <span class="home-card-cta">{item.cta}</span>
            </a>
          </li>
        ))}
      </ul>
    </section>

    <section class="home-section" aria-labelledby="home-work-heading">
      <div class="home-section-head-row">
        <div class="home-section-head">
          <p class="home-section-kicker">Snapshot</p>
          <h2 id="home-work-heading" class="home-section-title">Work</h2>
          <p class="home-section-description">Featured threads from the current archive cycle.</p>
        </div>
        <a href="/threads" class="home-section-link" data-color="orange" data-tone="seva">View all work threads</a>
      </div>
      {featuredThreadSnapshot.length > 0 ? (
        <ul class="home-list" aria-label="Work snapshot list">
          {featuredThreadSnapshot.map((thread) => (
            <li>
              <article class="home-list-card">
                <p class="home-list-meta">{thread.year} · {thread.type}</p>
                <h3 class="home-list-title">{thread.title}</h3>
                <p class="home-list-summary">{thread.blurb}</p>
                <a
                  href={thread.href}
                  class="home-list-link"
                  data-color="orange"
                  data-tone="seva"
                  {...(thread.external ? { target: '_blank', rel: 'noopener' } : {})}
                >
                  Open thread
                </a>
              </article>
            </li>
          ))}
        </ul>
      ) : (
        <p class="home-empty">No featured threads are configured yet.</p>
      )}
    </section>

    <section class="home-section" aria-labelledby="home-writing-heading">
      <div class="home-section-head-row">
        <div class="home-section-head">
          <p class="home-section-kicker">Snapshot</p>
          <h2 id="home-writing-heading" class="home-section-title">Writing</h2>
          <p class="home-section-description">Latest notes, essays, and archive updates.</p>
        </div>
        <a href="/writing" class="home-section-link" data-color="red" data-tone="contemplation">View all writing</a>
      </div>
      {recentPosts.length > 0 ? (
        <ul class="home-list" aria-label="Writing snapshot list">
          {recentPosts.map((post) => (
            <li>
              <article class="home-list-card">
                <p class="home-list-meta">{shortDateFormatter.format(post.data.date)}</p>
                <h3 class="home-list-title">{post.data.title}</h3>
                <p class="home-list-summary">{post.data.summary}</p>
                <div class="home-writing-tags" aria-label="Post tags">
                  {post.data.tags.slice(0, 3).map((tag) => <span>#{tag}</span>)}
                </div>
                <a href={`/writing/${post.slug}`} class="home-list-link" data-color="red" data-tone="contemplation">Read note</a>
              </article>
            </li>
          ))}
        </ul>
      ) : (
        <p class="home-empty">No writing entries are published yet.</p>
      )}
    </section>

    <section class="home-section" aria-labelledby="home-social-heading">
      <div class="home-section-head-row">
        <div class="home-section-head">
          <p class="home-section-kicker">Snapshot</p>
          <h2 id="home-social-heading" class="home-section-title">Social</h2>
          <p class="home-section-description">Links-first access to active social archive channels.</p>
        </div>
        <a href="/social" class="home-section-link" data-color="violet" data-tone="compassion">View all social pages</a>
      </div>
      <ul class="home-grid" aria-label="Social snapshot cards">
        {socialSnapshot.map((item) => (
          <li>
            <article class="home-card home-social-card" data-provider={item.id}>
              <h3 class="home-card-title">{item.title}</h3>
              <p class="home-card-summary">{item.summary}</p>
              <div class="home-social-links">
                <a href={item.href} data-color={item.color} data-tone={item.tone}>Open local feed</a>
                <a href={item.profileUrl} target="_blank" rel="noopener" data-color={item.color} data-tone={item.tone}>
                  Open profile
                </a>
              </div>
            </article>
          </li>
        ))}
      </ul>
    </section>

    <section class="home-section home-contact" aria-labelledby="home-contact-heading">
      <div class="home-section-head">
        <p class="home-section-kicker">Close the loop</p>
        <h2 id="home-contact-heading" class="home-section-title">Contact</h2>
        <p class="home-section-description">Use the form for collaborations, inquiries, and project requests.</p>
      </div>
      <div class="home-contact-actions">
        <a href="/contact" class="home-action" data-color="yellow" data-tone="harmony">Open contact form</a>
        <a href={profile.link_hub_url} class="home-action" target="_blank" rel="noopener" data-color="yellow" data-tone="harmony">
          Open link hub
        </a>
      </div>
    </section>
  </article>
</BaseLayout>

<style>
  .home-simplified {
    display: grid;
    gap: clamp(1.4rem, 3.3vw, 2.6rem);
  }

  .home-hero {
    display: grid;
    gap: 0.9rem;
    max-width: 70ch;
  }

  .home-kicker {
    margin: 0;
    color: var(--tone-muted);
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.72rem;
  }

  .home-title {
    margin: 0;
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: clamp(2rem, 5.2vw, 3.2rem);
    line-height: 1.04;
    letter-spacing: -0.03em;
  }

  .home-dek {
    margin: 0;
    color: color-mix(in srgb, var(--tone-text) 92%, var(--tone-muted) 8%);
    max-width: 64ch;
  }

  .home-role-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.45rem;
  }

  .home-role-chip {
    border: 1px solid color-mix(in srgb, var(--tone-accent) 42%, var(--line2));
    border-radius: 999px;
    padding: 0.3rem 0.72rem;
    font-size: 0.76rem;
    background: color-mix(in srgb, var(--tone-accent) 16%, transparent);
    color: var(--tone-text);
  }

  .home-section {
    display: grid;
    gap: 1rem;
    padding-top: 0.65rem;
    border-top: 1px solid var(--line2);
  }

  .home-section-head {
    display: grid;
    gap: 0.35rem;
    max-width: 68ch;
  }

  .home-section-head-row {
    display: flex;
    align-items: end;
    justify-content: space-between;
    gap: 0.9rem;
    flex-wrap: wrap;
  }

  .home-section-kicker {
    margin: 0;
    color: var(--tone-muted);
    text-transform: uppercase;
    letter-spacing: 0.13em;
    font-size: 0.7rem;
  }

  .home-section-title {
    margin: 0;
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: clamp(1.3rem, 2.2vw, 1.8rem);
  }

  .home-section-description {
    margin: 0;
    color: color-mix(in srgb, var(--tone-text) 86%, var(--tone-muted) 14%);
  }

  .home-section-link {
    color: var(--tone-accent-glow);
    text-decoration: none;
    border-bottom: 1px solid color-mix(in srgb, var(--tone-accent) 46%, transparent);
    white-space: nowrap;
    font-size: 0.9rem;
  }

  .home-section-link:hover,
  .home-section-link:focus-visible {
    border-bottom-color: color-mix(in srgb, var(--tone-accent) 78%, transparent);
  }

  .home-grid,
  .home-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 0.75rem;
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 14.5rem), 1fr));
  }

  .home-card,
  .home-list-card {
    border: 1px solid var(--line);
    border-radius: 0.92rem;
    background: linear-gradient(180deg, color-mix(in srgb, var(--tone-accent) 8%, transparent), rgba(255, 255, 255, 0.015));
    padding: 0.85rem 0.95rem;
  }

  .home-card {
    min-height: 100%;
    display: grid;
    gap: 0.52rem;
    text-decoration: none;
    color: inherit;
    transition:
      border-color var(--motion-fast) var(--ease-standard),
      transform var(--motion-fast) var(--ease-emphasized),
      background-color var(--motion-base) var(--ease-standard);
  }

  .home-card:hover,
  .home-card:focus-visible {
    border-color: color-mix(in srgb, var(--tone-accent) 50%, var(--line));
    transform: translateY(-1px);
  }

  .home-highlight-card {
    background:
      linear-gradient(180deg, color-mix(in srgb, var(--tone-sky) 10%, transparent), rgba(255, 255, 255, 0.015)),
      color-mix(in srgb, var(--tone-surface) 94%, transparent);
  }

  .home-card-title,
  .home-list-title {
    margin: 0;
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: 1.03rem;
    line-height: 1.2;
  }

  .home-card-summary,
  .home-list-summary {
    margin: 0;
    color: color-mix(in srgb, var(--tone-text) 86%, var(--tone-muted) 14%);
    line-height: 1.55;
  }

  .home-card-meta,
  .home-list-meta {
    margin: 0;
    color: var(--tone-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 0.7rem;
  }

  .home-card-cta,
  .home-list-link {
    display: inline-flex;
    width: fit-content;
    text-decoration: none;
    color: var(--tone-accent-glow);
    border-bottom: 1px solid color-mix(in srgb, var(--tone-accent) 45%, transparent);
    font-size: 0.88rem;
  }

  .home-list-link:hover,
  .home-list-link:focus-visible {
    border-bottom-color: color-mix(in srgb, var(--tone-accent) 80%, transparent);
  }

  .home-list {
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 17rem), 1fr));
  }

  .home-list-card {
    display: grid;
    gap: 0.52rem;
    min-height: 100%;
  }

  .home-writing-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    color: var(--tone-muted);
    font-size: 0.75rem;
  }

  .home-social-card {
    min-height: 100%;
    display: grid;
    gap: 0.68rem;
  }

  .home-social-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.52rem 0.8rem;
  }

  .home-social-links a {
    color: var(--tone-accent-glow);
    text-decoration: none;
    border-bottom: 1px solid color-mix(in srgb, var(--tone-accent) 45%, transparent);
    font-size: 0.88rem;
  }

  .home-social-links a:hover,
  .home-social-links a:focus-visible {
    border-bottom-color: color-mix(in srgb, var(--tone-accent) 78%, transparent);
  }

  .home-contact-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.62rem;
  }

  .home-action {
    border: 1px solid color-mix(in srgb, var(--tone-accent) 35%, var(--line2));
    border-radius: 999px;
    padding: 0.42rem 0.9rem;
    text-decoration: none;
    color: var(--tone-text);
    background: color-mix(in srgb, var(--tone-accent) 14%, transparent);
    transition:
      border-color var(--motion-fast) var(--ease-standard),
      transform var(--motion-fast) var(--ease-emphasized);
  }

  .home-action:hover,
  .home-action:focus-visible {
    border-color: color-mix(in srgb, var(--tone-accent) 68%, var(--line2));
    transform: translateY(-1px);
  }

  .home-empty {
    margin: 0;
    color: var(--tone-muted);
  }

  @media (max-width: 640px) {
    .home-title {
      font-size: clamp(1.85rem, 9.5vw, 2.5rem);
    }

    .home-card,
    .home-list-card {
      padding: 0.78rem 0.82rem;
    }
  }
</style>
