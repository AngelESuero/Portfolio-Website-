---
import BaseLayout from '../../layouts/BaseLayout.astro';
import rooms from '../../data/rooms';
import type { Room } from '../../data/rooms';

const roomList = rooms as Room[];
const isExternal = (url: string) => /^https?:\/\//i.test(url);
---

<BaseLayout title="Social Arcade â€” a_e.s_" description="Digital arcade rooms powered by a single data source." theme="social">
  <section class="social-arcade">
    <header class="social-hero">
      <p class="social-kicker">Arcade index</p>
      <h1>Social Rooms</h1>
      <p class="social-dek">Every room is data-driven from <code>src/data/rooms.ts</code>. Open a room to run its machines.</p>
    </header>

    <div class="room-grid">
      {roomList.map((room) => (
        <article class="room-card" data-color={room.color || 'blue'}>
          <p class="room-type">{room.room_type}</p>
          <h2>{room.title}</h2>
          <p>{room.description || 'Open room'}</p>

          <ul class="room-machines">
            {room.machines.slice(0, 3).map((machine) => (
              <li>
                <a href={machine.url} {...(isExternal(machine.url) ? { target: '_blank', rel: 'noopener' } : {})}>
                  {machine.title}
                </a>
              </li>
            ))}
          </ul>

          <a class="room-link" href={`/room/${room.slug}`}>Open room</a>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .social-arcade {
    max-width: 68rem;
    margin: 0 auto;
  }

  .social-kicker {
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.72rem;
    color: var(--tone-muted);
  }

  .social-hero h1 {
    margin: 0.35rem 0 0.72rem;
    font-size: clamp(2rem, 4.2vw, 3rem);
    line-height: 1.08;
  }

  .social-dek {
    margin: 0;
    max-width: 70ch;
    color: var(--tone-muted);
  }

  .room-grid {
    margin-top: 1rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 0.72rem;
  }

  .room-card {
    border: 1px solid var(--line);
    border-radius: var(--radius);
    background: var(--panel);
    padding: 0.85rem;
  }

  .room-type {
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.09em;
    font-size: 0.72rem;
    color: var(--tone-muted);
  }

  .room-card h2 {
    margin: 0.45rem 0 0;
    font-size: 1.05rem;
  }

  .room-card > p {
    margin: 0.48rem 0 0;
  }

  .room-machines {
    margin: 0.72rem 0 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 0.34rem;
  }

  .room-machines a {
    color: var(--tone-text);
    text-decoration: none;
  }

  .room-machines a:hover,
  .room-machines a:focus-visible {
    color: var(--tone-accent-glow);
  }

  .room-link {
    display: inline-flex;
    margin-top: 0.85rem;
    border-bottom: 1px solid color-mix(in srgb, var(--tone-accent) 35%, transparent);
    color: var(--tone-accent-glow);
    text-decoration: none;
  }

  .room-link:hover,
  .room-link:focus-visible {
    border-color: var(--tone-accent-bright);
  }
</style>
