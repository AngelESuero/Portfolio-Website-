<div class="view-settings">
  <button id="view-settings-open" class="view-settings-open" type="button" aria-haspopup="dialog">
    View settings
  </button>
</div>

<div id="view-settings-modal" class="view-settings-modal" hidden>
  <button type="button" class="view-settings-backdrop" data-close-view-settings aria-label="Close view settings"></button>
  <section class="view-settings-panel" role="dialog" aria-modal="true" aria-labelledby="view-settings-title">
    <header class="view-settings-header">
      <h2 id="view-settings-title">View settings</h2>
      <button type="button" class="view-settings-close" data-close-view-settings aria-label="Close">Ã—</button>
    </header>

    <div class="view-settings-modes" role="group" aria-label="Site mode">
      <button type="button" class="view-mode-btn" data-mode="normal">Normal</button>
      <button type="button" class="view-mode-btn" data-mode="walk">Walkthrough</button>
      <button type="button" class="view-mode-btn" data-mode="explore">Explore</button>
    </div>

    <div class="view-settings-actions">
      <button id="view-settings-reset" type="button">Reset</button>
    </div>
  </section>
</div>

<script is:inline>
  (() => {
    const openBtn = document.getElementById('view-settings-open');
    const modal = document.getElementById('view-settings-modal');
    const resetBtn = document.getElementById('view-settings-reset');
    if (!openBtn || !modal || !resetBtn) return;

    const closeTargets = Array.from(modal.querySelectorAll('[data-close-view-settings]'));
    const modeButtons = Array.from(modal.querySelectorAll('.view-mode-btn'));

    const getApi = () => window.__modeSettings;
    const getState = () =>
      typeof getApi()?.getState === 'function' ? getApi().getState() : { mode: 'normal' };

    const syncUi = () => {
      const state = getState();
      modeButtons.forEach((button) => {
        const selected = button.getAttribute('data-mode') === state.mode;
        button.classList.toggle('is-active', selected);
        button.setAttribute('aria-pressed', String(selected));
      });
    };

    const openModal = () => {
      syncUi();
      modal.hidden = false;
      document.body.style.overflow = 'hidden';
    };

    const closeModal = () => {
      modal.hidden = true;
      document.body.style.removeProperty('overflow');
    };

    openBtn.addEventListener('click', openModal);
    closeTargets.forEach((node) => node.addEventListener('click', closeModal));
    window.addEventListener('keydown', (event) => {
      if (event.key === 'Escape' && !modal.hidden) closeModal();
    });

    modeButtons.forEach((button) => {
      button.addEventListener('click', () => {
        const mode = button.getAttribute('data-mode') || 'normal';
        getApi()?.setMode?.(mode);
        syncUi();
      });
    });

    resetBtn.addEventListener('click', () => {
      getApi()?.reset?.();
      syncUi();
    });

    window.addEventListener('modesettings:change', syncUi);
    syncUi();
  })();
</script>

