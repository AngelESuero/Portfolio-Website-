---
// src/components/UntitledPlayer.astro
const title = Astro.props.title ?? 'Listen';
const subtitle = Astro.props.subtitle ?? 'untitled.stream';
---

<section id="listen" class="listen">
  <div class="listen__head">
    <h2>{title}</h2>
    <p>{subtitle}</p>
  </div>

  <div class="listen__frame">
    <iframe
      style="border-radius: 24px"
      src="https://untitled.stream/embed/m8IEX655GwMH"
      width="100%"
      height="344"
      allowFullScreen
      allow="picture-in-picture"
      frameborder="0"
      loading="lazy"
      title="untitled.stream player"
    ></iframe>
  </div>
</section>

<style>
  .listen {
    margin-top: 40px;
  }

  .listen__head {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 16px;
    margin-bottom: 12px;
  }

  .listen__head p {
    opacity: 0.65;
    font-size: 13px;
    margin: 0;
  }

  .listen__frame {
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.03);
    box-shadow: 0 1px 0 rgba(255, 255, 255, 0.05) inset, 0 24px 70px rgba(0, 0, 0, 0.45);
    overflow: hidden;
  }
</style>
